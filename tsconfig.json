{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "alwaysStrict": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "types": ["phaser"]
  },
  "include": ["src/**/*.ts"]
}
